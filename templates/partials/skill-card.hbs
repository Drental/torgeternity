<div
  class="skill-card sheet-card"
  data-type="{{data.type}}"
  style="background-image: url('systems/torgeternity/images/bgparch.webp')"
>
<!--<div style="background-color: rgba(255,247,247,0.25);margin: 2rem;">-->
  <div class="chat-message torgeternity-message-header">
      <img class="message-header torgeternity-actor-icon" src="{{actorPic}}" title="{{name}}" />
      {{log this}}

      <div  class="message-header torgeternity-skill-description">
          {{#if unskilledTest}}
          <p class="skill-chat-title unskilled">{{chatTitle}}</p>
          <p class="skill-unskilled-label" style="{{unskilledLabel}}">{{localize "torgeternity.chatText.unskilled"}}</p>
          {{else}}    
          <p class="skill-chat-title skilled">{{chatTitle}}</p>
          {{/if}}
      </div>
      
      {{#if target.present}}
        <img class="message-header torgeternity-actor-icon" src="{{target.targetPic}}" title="{{target.targetName}}" />
      {{/if}}
  </div>
  
  <div class="chat-text" style="padding:0px">
    <p class="skill-roll-result" style="{{resultTextColor}}">{{resultText}}</p>
    <p class="skill-roll-disconnect-label" style="{{disconnectLabel}}">{{localize
        "torgeternity.chatText.possibleDisconnect"
      }},
      {{localize "torgeternity.chatText.rolled"}}
      {{combinedRollTotal}}</p>
    <p class="skill-roll-damage-label" style="{{damageLabel}}">{{damageDescription}}</p>
    <!--{{#if target.present}}{{#if isAttack}}-->
    <p style="display: flex; align-items: center;justify-content: center">
      <a
        class="applyDam"
        style="{{applyDamLabel}}"
        title="{{localize 'torgeternity.sheetLabels.applyDamageTooltip'}}"
      >{{localize "torgeternity.sheetLabels.applyDamage"}}</a>
      <span style="{{applyDamLabel}}">&nbsp;&bull;&nbsp;</span>
      <a
        class="soakDam"
        style="{{applyDamLabel}}"
        title="{{localize 'torgeternity.sheetLabels.soakDamageTooltip'}}"
      >{{localize "torgeternity.sheetLabels.soakDamage"}}</a>
      <a class="applyStymied" style="{{applyDebuffLabel}}"
        title="{{localize 'torgeternity.sheetLabels.applyStymiedTooltip'}}">{{localize
        'torgeternity.sheetLabels.applyStymied'}}</a>
      <span style="{{applyDebuffLabel}}">&nbsp;&bull;&nbsp;</span>
      <a class="applyVulnerable" style="{{applyDebuffLabel}}"
        title="{{localize 'torgeternity.sheetLabels.applyVulnerableTooltip'}}">{{localize
        'torgeternity.sheetLabels.applyVulnerable'}}</a>
    </p>
    <!--{{/if}}{{/if}}-->
    <details class="chat-message chatCardDetailsELement"><summary
        class="skillcardSummaryElement"
        data-open="{{localize 'torgeternity.chatText.hideDetails'}}"
        data-close="{{localize 'torgeternity.chatText.showDetails'}}"
      ></summary>
      <p class="skill-roll-action-label" style="{{actionTotalLabel}}">{{actionTotalContent}}</p>
      <p class="skill-roll-action-label" style="{{damageSubLabel}}">{{damageSubDescription}}</p>
      <table class="skill-roll-table">
        <tr>
          <td>
            {{typeLabel}}:
          </td>
          <td>
            {{skillValue}}
          </td>
        </tr>

        <tr>
          <td>
            {{localize "torgeternity.chatText.dieTotal"}}:
            
          </td>
          <td>
            {{combinedRollTotal}}
          </td>
        </tr>

        <tr>
          <td>
            {{localize "torgeternity.chatText.bonus"}}:
          </td>
          <td>
            <div><span style="{{bonusPlusLabel}}">+</span>{{bonus}}</div>
          </td>
        </tr>

        <tr style="{{modifierLabel}}">
          <td>
            <a class="modifier-label">{{localize "torgeternity.chatText.modifiers"}}</a>:
          </td>
          <td>

            <div title="{{modifierText}}" style="display:block"><span
                style="{{modifierPlusLabel}}"
              >+</span>{{modifiers}}</div>
          </td>
        </tr>

        <tr style="{{cardsPlayedLabel}}">
          <td>
            {{localize "torgeternity.chatText.bonusCard"}}:
          </td>
          <td>
            <div>{{cardsPlayed}}</div>
          </td>
        </tr>

        <tr style="{{notesLabel}}">
          <td>
            {{localize "torgeternity.chatText.notes"}}:
          </td>
          <td>
            <div>{{chatNote}}</div>
          </td>
        </tr>

      </table>

     <!-- <div class="message-content">
        <div class="dice-roll">
          <div class="dice-result">
            <div class="dice-formula"></div>
            <div class="dice-tooltip">
              <section class="tooltip-part">
                <div class="dice">
                  <header class="part-header flexrow">
                    <span class="part-formula"></span>
                    <span class="part-total"></span>
                  </header>
                  <ol class="dice-rolls">
                    <li class="roll die d20 exploded max"></li>
                    <li class="roll die d20"></li>
                  </ol>
                </div>
              </section>
            </div>
            <h4 class="dice-total"></h4>
          </div>
        </div>
      </div>-->
    </details>
    <div class="skill-roll-menu">
      <a class="roll-fav" style="{{isFavStyle}}">{{localize "torgeternity.chatText.favored"}}</a>
      <span style="{{isFavStyle}}">&bull;</span>
      <a class="roll-possibility" style="{{possibilityStyle}}">{{localize "torgeternity.chatText.possibility"}}</a>
      <span style="{{possibilityStyle}}">&bull;</span>
      <a class="roll-up" style="{{upStyle}}">{{localize "torgeternity.chatText.up"}}</a>
      <span style="{{upStyle}}">&bull;</span>
      <a class="roll-hero" style="{{heroStyle}}">{{localize "torgeternity.chatText.hero"}}</a>
      <span style="{{heroStyle}}">&bull;</span>
      <a class="roll-drama" style="{{dramaStyle}}">{{localize "torgeternity.chatText.drama"}}</a>
      <span style="{{dramaStyle}}">&bull;</span>
      <a class="add-plus3" style="{{plus3Style}}">{{localize "torgeternity.chatText.bonusCard"}}</a>
      <span style="{{plus3Style}}">&bull;</span>
      <a class="add-bd" style="{{bdStyle}}">{{localize "torgeternity.chatText.bonusDice"}}</a>
    </div>
  </div>
<!--</div>-->
</div>

