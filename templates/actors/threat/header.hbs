<div>
    <h1> <input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
    <p class="item-data-label">
        {{localize "torgeternity.sheetLabels.race"}}


        <select name="data.details.race" class="input-box">
            {{#select data.details.race}}
            {{#each config.races as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
        </select>
    </p>
    <p><img src="systems/torgeternity/images/te-logo.png" title="TE Logo" /></p>
</div>
<div>
    <p>
        <span>{{localize "torgeternity.gear.cosm"}}</span>
        <select name="data.other.cosm" class="input-box">
            {{#select data.other.cosm}}
            {{#each config.cosmTypes as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
        </select>
    </p>
    
    <p>
        <span class="vital-box">
            {{localize "torgeternity.sheetLabels.wounds"}}:</span>
        <input name="data.wounds.value" type="number" value="{{data.wounds.value}}" data-dtype="Number"
            class="small-input" />
        /
        <input name="data.wounds.max" type="number" value="{{data.wounds.max}}" data-dtype="Number" class="small-input" />

    </p>
    <p>
        <span class="vital-box">
            {{localize "torgeternity.sheetLabels.shock"}}:</span>
        <input name="data.shock.value" type="number" value="{{data.shock.value}}" data-dtype="Number"
            class="small-input" />
        /
        <input name="data.shock.max" type="number" value="{{data.shock.max}}" data-dtype="Number" class="small-input" />

    </p>
    <p class="attribut-block">
        <span class="other-label" data-skill-value="{{data.other.posibilities}}"
            data-skill-name="{{data.other.posibilities}}">{{localize "torgeternity.sheetLabels.possibilities"}}</span>
        <input name="data.other.posibilities" type="number" value="{{data.other.posibilities}}" data=dtype="Number" />
    </p>
    <p>
        <span class="vital-box">
            <a class="item-control up-roll" title="Up Roll">Up</a>
        </span>
    </p>
</div>
