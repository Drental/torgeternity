<div id="players" class="app {{#if hide}}hidden{{/if}}">
	<h3>
		<i class="fas fa-users"></i>
		{{ localize "PLAYERS.Title" }}
		{{#if showOffline}}
		<i class="players-mode fas fa-angle-up"></i>
		{{else}}
		<i class="players-mode fas fa-angle-down"></i>
		{{/if}}

	</h3>

	{{#if self.isGM}}
	<p class=" flexrow">
		<i class="players-popout far fa-window-restore" title="open party-sheet"></i>
		<i class="fas fa-bolt possReset" title="reset stormnight's possibilities"></i>
	</p>{{/if}}


	<ol id="player-list">

		{{#each users}}
		<li class="player {{#if this.isGM}}gm{{/if}} flexrow" data-user-id="{{this._id}}">
			<span class="player-active {{#if this.active}}active{{else}}inactive{{/if}}"
				style="background: {{this.color}}; border: 1px solid {{this.border}}"></span>
			<span class="player-name {{#if this.isSelf}}self{{/if}}">
				{{this.name}}
				{{#if this.isGM}} [GM]
				{{else if this.charname}} [{{this.charname}}]
				{{/if}}
			</span>
		</li>
		{{#if this.character}}
		<li class="player">

			<span class="posibilities">
				<span>{{localize "torgeternity.stats.possibilities"}}</span>
				<em class="possValue">{{this.character.data.data.other.posibilities}}</em>
				{{#if ../self.isGM}}
				<em class="possAdd" data-targetId="{{this.character.data._id}}"><i class="fas fa-plus-circle"></i></em>
				<em class="possMinus" data-targetId="{{this.character.data._id}}"><i class="fas fa-minus-circle"></i></em>
				{{/if}}
			</span>
		</li>
		{{/if}}
		{{/each}}
	</ol>

</div>