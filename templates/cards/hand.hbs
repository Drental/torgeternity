<div class="cardArea">
    <h3 class="cardTitle">destiny cards hand</h3>
    <ol class="destinyCards cardHand">
        {{#each destinyCard as |item id|}}
        {{#unless item.data.reserved}}

        <li class="card " data-item-id="{{item._id}}">
            <div class="item-controls">
                <a class="item-control card-play" title="play card"><i class="fa fa-share"></i></a>
                <a class="item-control card-exchange" title="exchange card"><i class="fa fa-retweet"></i></a>
                <a class="item-control card-reserve" title="reserve card"><i class="fa fa-star"></i></a>
            </div>
            <div>
                <img src="{{item.img}}" />

            </div>
        </li>
        {{/unless}}
        {{/each}}
    </ol>
</div>
<div class="cardArea">

    <h3 class="cardTitle">reserved cards </h3>
    <ol class="reservedCards cardHand">

        {{#each destinyCard as |item id|}}
        {{#if item.data.reserved}}
        <li class="card " data-item-id="{{item._id}}">

            <div class="item-controls">
                <a class="item-control card-play" title="play card"><i class="fa fa-share"></i></a>
                <a class="item-control card-exchange" title="exchange card"><i class="fa fa-retweet"></i></a>
                <a class="item-control card-reserve" title="unreserve card"><i class="fa fa-star"
                        style="color:rgb(136, 91, 91)"></i></a>
            </div>
            <div>
                <img src="{{item.img}}" title="{{item.name}}" />

            </div>

        </li>
        {{/if}}
        {{/each}}
    </ol>
</div>
<div class="cardArea">

    <h3 class="cardTitle">axiom card </h3>
    <ol class="axiomCards cardHand">


        {{#each axiomCard as |item id|}}
        <li class="card " data-item-id="{{item._id}}">
            <div class="item-controls">
                <a class="item-control card-play" title="play card"><i class="fa fa-share"></i></a>
                <a class="item-control card-expand" title="expand card"><i class="fa fa-expand"></i></a>

            </div>
            <div>
                <img src="{{item.img}}" title="{{item.name}}" />

            </div>

        </li>
        {{/each}}
    </ol>
</div>